<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- SEPE Export Form View -->
    <record id="wfm_sepe_export_form" model="ir.ui.view">
        <field name="name">wfm.sepe.export.form</field>
        <field name="model">wfm.sepe.export</field>
        <field name="arch" type="xml">
            <form string="SEPE Export">
                <header>
                    <button name="action_generate_excel"
                            string="Generate Excel"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_submit_to_sepe"
                            string="Mark as Submitted"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'exported'"/>
                    <button name="action_reset_to_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,exported,submitted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_visits"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-calendar-check-o">
                            <field name="visit_count" widget="statinfo" string="Visits"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Date Range">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Statistics">
                            <field name="total_hours"/>
                            <field name="total_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group string="Export File" invisible="state == 'draft'">
                        <field name="export_file" filename="export_filename"/>
                        <field name="export_filename" invisible="1"/>
                        <field name="export_date"/>
                        <field name="exported_by"/>
                        <field name="submitted_date" invisible="state != 'submitted'"/>
                    </group>
                    <notebook>
                        <page string="Visits" name="visits">
                            <field name="visit_ids" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="visit_date"/>
                                    <field name="client_id"/>
                                    <field name="installation_id"/>
                                    <field name="partner_id"/>
                                    <field name="duration"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'done'"
                                           decoration-info="state == 'confirmed'"
                                           decoration-warning="state == 'in_progress'"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- SEPE Export List View -->
    <record id="wfm_sepe_export_list" model="ir.ui.view">
        <field name="name">wfm.sepe.export.list</field>
        <field name="model">wfm.sepe.export</field>
        <field name="arch" type="xml">
            <list string="SEPE Exports">
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="visit_count"/>
                <field name="total_hours"/>
                <field name="total_amount"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'exported'"
                       decoration-success="state == 'submitted'"/>
                <field name="export_date"/>
                <field name="exported_by"/>
            </list>
        </field>
    </record>

    <!-- SEPE Export Search View -->
    <record id="wfm_sepe_export_search" model="ir.ui.view">
        <field name="name">wfm.sepe.export.search</field>
        <field name="model">wfm.sepe.export</field>
        <field name="arch" type="xml">
            <search string="Search SEPE Exports">
                <field name="name"/>
                <field name="exported_by"/>
                <filter name="draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="exported" string="Exported" domain="[('state', '=', 'exported')]"/>
                <filter name="submitted" string="Submitted" domain="[('state', '=', 'submitted')]"/>
                <group string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_exported_by" string="Exported By" context="{'group_by': 'exported_by'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- SEPE Export Action -->
    <record id="action_wfm_sepe_export" model="ir.actions.act_window">
        <field name="name">SEPE Exports</field>
        <field name="res_model">wfm.sepe.export</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="wfm_sepe_export_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first SEPE export
            </p>
            <p>
                Use the SEPE Export wizard to select completed visits and generate
                the Excel file required for SEPE submission.
            </p>
        </field>
    </record>

    <!-- SEPE Export Wizard Form View -->
    <record id="wfm_sepe_export_wizard_form" model="ir.ui.view">
        <field name="name">wfm.sepe.export.wizard.form</field>
        <field name="model">wfm.sepe.export.wizard</field>
        <field name="arch" type="xml">
            <form string="SEPE Export Wizard">
                <group>
                    <group string="Date Range">
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="include_exported"/>
                    </group>
                    <group string="Summary">
                        <field name="visit_count" readonly="1"/>
                        <field name="total_hours" readonly="1"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_create_export"
                            string="Generate SEPE Export"
                            type="object"
                            class="btn-primary"
                            invisible="visit_count == 0"/>
                    <button name="action_preview_visits"
                            string="Preview Visits"
                            type="object"
                            class="btn-secondary"
                            invisible="visit_count == 0"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- SEPE Export Wizard Action -->
    <record id="action_sepe_export_wizard" model="ir.actions.act_window">
        <field name="name">Create SEPE Export</field>
        <field name="res_model">wfm.sepe.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
