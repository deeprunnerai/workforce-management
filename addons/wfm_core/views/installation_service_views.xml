<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Installation Service Form View -->
    <record id="view_wfm_installation_service_form" model="ir.ui.view">
        <field name="name">wfm.installation.service.form</field>
        <field name="model">wfm.installation.service</field>
        <field name="arch" type="xml">
            <form string="Installation Service">
                <header>
                    <button name="action_assign" string="Assign" type="object"
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_start" string="Start" type="object"
                            invisible="state != 'assigned'" class="btn-primary"/>
                    <button name="action_complete" string="Complete" type="object"
                            invisible="state != 'in_progress'" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state in ('completed', 'cancelled')"/>
                    <button name="action_create_visit" string="Create Visit" type="object"
                            invisible="state in ('draft', 'completed', 'cancelled')"
                            class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,assigned,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(wfm_core.action_wfm_visits)d" type="action"
                                class="oe_stat_button" icon="fa-calendar"
                                context="{'search_default_installation_service_id': id}">
                            <field name="visit_count" widget="statinfo" string="Visits"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="code"/>
                        <h1>
                            <field name="code" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Service Assignment">
                            <field name="contract_service_id"/>
                            <field name="contract_id"/>
                            <field name="client_id"/>
                            <field name="service_type"/>
                        </group>
                        <group string="Installation">
                            <field name="installation_id" domain="[('client_id', '=', client_id)]"/>
                            <field name="installation_address"/>
                        </group>
                    </group>
                    <group>
                        <group string="Partner Assignment">
                            <field name="partner_id"/>
                            <field name="partner_specialty"/>
                        </group>
                        <group string="Period">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <group>
                        <group string="Hours Tracking">
                            <field name="assigned_hours"/>
                            <field name="programmed_hours"/>
                            <field name="completed_hours"/>
                            <field name="remaining_hours" decoration-danger="remaining_hours &lt; 0"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Visits" name="visits">
                            <field name="visit_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="visit_date"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="duration"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Installation Service Tree View -->
    <record id="view_wfm_installation_service_tree" model="ir.ui.view">
        <field name="name">wfm.installation.service.tree</field>
        <field name="model">wfm.installation.service</field>
        <field name="arch" type="xml">
            <list string="Installation Services"
                  decoration-muted="state == 'cancelled'"
                  decoration-success="state == 'completed'"
                  decoration-danger="remaining_hours &lt; 0">
                <field name="code"/>
                <field name="client_id"/>
                <field name="installation_id"/>
                <field name="service_type"/>
                <field name="partner_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="assigned_hours"/>
                <field name="programmed_hours"/>
                <field name="remaining_hours"/>
                <field name="visit_count"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'completed'"
                       decoration-info="state == 'assigned'"
                       decoration-warning="state == 'in_progress'"/>
            </list>
        </field>
    </record>

    <!-- Installation Service Kanban View -->
    <record id="view_wfm_installation_service_kanban" model="ir.ui.view">
        <field name="name">wfm.installation.service.kanban</field>
        <field name="model">wfm.installation.service</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="state"/>
                <field name="service_type"/>
                <templates>
                    <t t-name="card">
                        <field name="code" class="fw-bold"/>
                        <field name="installation_id"/>
                        <field name="partner_id" widget="many2one_avatar"/>
                        <div class="d-flex justify-content-between mt-2">
                            <span><field name="assigned_hours"/>h assigned</span>
                            <span><field name="remaining_hours"/>h remaining</span>
                        </div>
                        <field name="state" widget="badge"
                               decoration-success="state == 'completed'"
                               decoration-info="state == 'assigned'"
                               decoration-warning="state == 'in_progress'"/>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Installation Service Search View -->
    <record id="view_wfm_installation_service_search" model="ir.ui.view">
        <field name="name">wfm.installation.service.search</field>
        <field name="model">wfm.installation.service</field>
        <field name="arch" type="xml">
            <search string="Search Installation Services">
                <field name="code"/>
                <field name="contract_service_id"/>
                <field name="client_id"/>
                <field name="installation_id"/>
                <field name="partner_id"/>
                <filter string="Active" name="active_services" domain="[('state', 'in', ('assigned', 'in_progress'))]"/>
                <filter string="Needs Scheduling" name="needs_scheduling"
                        domain="[('remaining_hours', '&gt;', 0), ('state', '!=', 'completed')]"/>
                <filter string="Over-scheduled" name="over_scheduled" domain="[('remaining_hours', '&lt;', 0)]"/>
                <separator/>
                <filter string="Physician" name="physician" domain="[('service_type', '=', 'physician')]"/>
                <filter string="Safety Engineer" name="safety_engineer" domain="[('service_type', '=', 'safety_engineer')]"/>
                <separator/>
                <group string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Installation" name="group_installation" context="{'group_by': 'installation_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Service Type" name="group_service_type" context="{'group_by': 'service_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Installation Service Action -->
    <record id="action_wfm_installation_services" model="ir.actions.act_window">
        <field name="name">Installation Services</field>
        <field name="res_model">wfm.installation.service</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_active_services': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Installation Service
            </p>
            <p>
                Installation Services assign a specific OHS partner to provide
                services at a client installation. Visits are scheduled against
                these assignments.
            </p>
        </field>
    </record>
</odoo>
