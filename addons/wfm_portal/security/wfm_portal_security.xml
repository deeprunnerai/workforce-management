<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- WFM Partner Security Group -->
        <record id="group_wfm_partner" model="res.groups">
            <field name="name">WFM Partner</field>
            <field name="comment">External OHS partners who can view their own assigned visits</field>
        </record>
    </data>

    <data noupdate="1">
        <!-- Partners can read and update visits assigned to them -->
        <record id="wfm_visit_rule_partner" model="ir.rule">
            <field name="name">WFM Partner: Own Visits Only</field>
            <field name="model_id" ref="wfm_core.model_wfm_visit"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Partners can read installations linked to their visits -->
        <record id="wfm_installation_rule_partner" model="ir.rule">
            <field name="name">WFM Partner: Read Installations from Own Visits</field>
            <field name="model_id" ref="wfm_core.model_wfm_installation"/>
            <field name="domain_force">[('visit_ids.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Partners can read visit stages -->
        <record id="wfm_visit_stage_rule_partner" model="ir.rule">
            <field name="name">WFM Partner: Read Visit Stages</field>
            <field name="model_id" ref="wfm_core.model_wfm_visit_stage"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Partners can read all partners (needed for displaying client info on visits) -->
        <record id="res_partner_rule_partner_read" model="ir.rule">
            <field name="name">WFM Partner: Read All Partners</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Partners can update their own partner record (My Profile) -->
        <record id="res_partner_rule_partner_write" model="ir.rule">
            <field name="name">WFM Partner: Edit Own Partner Record</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[('id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Partners can manage their own availability -->
        <record id="wfm_availability_rule_partner" model="ir.rule">
            <field name="name">WFM Partner: Own Availability Only</field>
            <field name="model_id" ref="wfm_portal.model_wfm_partner_availability"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('wfm_portal.group_wfm_partner'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
