<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- PARTNER PORTAL - REFERRAL VIEWS             -->
    <!-- (For partners to submit referrals)          -->
    <!-- ============================================ -->

    <!-- Referral Form View (Partner Portal) -->
    <record id="view_partner_referral_form" model="ir.ui.view">
        <field name="name">wfm.partner.referral.form</field>
        <field name="model">wfm.partner.referral</field>
        <field name="arch" type="xml">
            <form string="Referral">
                <header>
                    <button name="action_submit"
                            string="Submit Referral"
                            type="object"
                            class="btn-primary"
                            invisible="state in ('submitted', 'under_review', 'accepted', 'rejected', 'meeting_scheduled')"/>
                    <button name="action_reset_to_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state not in ('submitted',)"
                            groups="wfm_portal.group_wfm_coordinator"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,under_review,accepted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Candidate Information">
                            <field name="candidate_name"
                                   placeholder="Full name of the person you're referring"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_email"
                                   placeholder="candidate@email.com"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_phone"
                                   placeholder="+30 xxx xxx xxxx"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_specialty"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_city"
                                   placeholder="e.g., Athens, Thessaloniki"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_resume" filename="candidate_resume_filename"
                                   readonly="state not in ('draft', False)"/>
                            <field name="candidate_resume_filename" invisible="1"/>
                        </group>
                        <group string="Referral Details">
                            <field name="referring_partner_id" readonly="1"/>
                            <field name="submitted_date" readonly="1"
                                   invisible="not submitted_date"/>
                            <field name="coordinator_id" readonly="1"
                                   invisible="not coordinator_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Education" name="education">
                            <group>
                                <group string="Academic Background">
                                    <field name="candidate_bachelors"
                                           placeholder="e.g., Medicine, Engineering"
                                           readonly="state not in ('draft', False)"/>
                                    <field name="candidate_masters"
                                           placeholder="e.g., Occupational Health (optional)"
                                           readonly="state not in ('draft', False)"/>
                                    <field name="candidate_phd"
                                           placeholder="e.g., Safety Engineering (optional)"
                                           readonly="state not in ('draft', False)"/>
                                </group>
                                <group string="Certifications">
                                    <field name="candidate_certifications"
                                           placeholder="List relevant certifications, licenses..."
                                           readonly="state not in ('draft', False)"/>
                                </group>
                            </group>
                        </page>
                        <page string="Experience" name="experience">
                            <group>
                                <field name="candidate_experience"
                                       placeholder="Describe work history and relevant experience..."
                                       readonly="state not in ('draft', False)"/>
                            </group>
                            <group>
                                <field name="referral_reason"
                                       placeholder="Why would this candidate be a great fit for GEP?"
                                       readonly="state not in ('draft', False)"/>
                            </group>
                        </page>
                        <page string="Meeting Info" name="meeting"
                              invisible="state not in ('accepted', 'meeting_scheduled')">
                            <group>
                                <group>
                                    <field name="meeting_date" readonly="1"/>
                                    <field name="meeting_location" readonly="1"/>
                                </group>
                            </group>
                            <div class="alert alert-success" role="alert"
                                 invisible="state != 'accepted'">
                                <strong>Great news!</strong> Your referral has been accepted and a meeting invitation has been sent to the candidate.
                            </div>
                        </page>
                        <page string="Review Notes" name="review"
                              invisible="state == 'draft'"
                              groups="wfm_portal.group_wfm_coordinator">
                            <group>
                                <field name="review_notes"/>
                                <field name="rejection_reason"
                                       invisible="state != 'rejected'"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Referral List View (Partner Portal) -->
    <record id="view_partner_referral_list" model="ir.ui.view">
        <field name="name">wfm.partner.referral.list</field>
        <field name="model">wfm.partner.referral</field>
        <field name="arch" type="xml">
            <list string="My Referrals" decoration-success="state == 'accepted'"
                  decoration-warning="state == 'under_review'"
                  decoration-danger="state == 'rejected'"
                  decoration-info="state == 'submitted'">
                <field name="name"/>
                <field name="candidate_name"/>
                <field name="candidate_email"/>
                <field name="candidate_specialty"/>
                <field name="candidate_city"/>
                <field name="submitted_date"/>
                <field name="state" widget="badge"
                       decoration-success="state == 'accepted'"
                       decoration-warning="state in ('submitted', 'under_review')"
                       decoration-danger="state == 'rejected'"
                       decoration-info="state == 'meeting_scheduled'"/>
            </list>
        </field>
    </record>

    <!-- Referral Kanban View (Partner Portal) -->
    <record id="view_partner_referral_kanban" model="ir.ui.view">
        <field name="name">wfm.partner.referral.kanban</field>
        <field name="model">wfm.partner.referral</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile">
                <field name="name"/>
                <field name="candidate_name"/>
                <field name="candidate_email"/>
                <field name="candidate_specialty"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex justify-content-between mb-2">
                            <strong><field name="name"/></strong>
                            <field name="state" widget="badge"/>
                        </div>
                        <div class="mb-1">
                            <strong><field name="candidate_name"/></strong>
                        </div>
                        <div class="text-muted small">
                            <field name="candidate_email"/>
                        </div>
                        <div class="mt-2">
                            <span class="badge bg-secondary">
                                <field name="candidate_specialty"/>
                            </span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Partner Portal Action - My Referrals -->
    <record id="action_partner_referrals" model="ir.actions.act_window">
        <field name="name">My Referrals</field>
        <field name="res_model">wfm.partner.referral</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_partner_referral_list')}),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_partner_referral_kanban')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_partner_referral_form')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Refer a new partner candidate!
            </p>
            <p>
                Know someone who would be great for the GEP partner network?
                Submit a referral and earn rewards when they join!
            </p>
        </field>
    </record>

    <!-- Sequence for referral numbers -->
    <record id="seq_partner_referral" model="ir.sequence">
        <field name="name">Partner Referral Sequence</field>
        <field name="code">wfm.partner.referral</field>
        <field name="prefix">REF/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>
</odoo>
