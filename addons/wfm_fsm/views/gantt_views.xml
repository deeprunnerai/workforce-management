<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- INSTALLATION SERVICE TIMELINE CALENDAR VIEW -->
    <!-- ============================================ -->

    <record id="view_wfm_installation_service_timeline_calendar" model="ir.ui.view">
        <field name="name">wfm.installation.service.timeline.calendar</field>
        <field name="model">wfm.installation.service</field>
        <field name="arch" type="xml">
            <calendar string="Services Timeline"
                      date_start="start_date"
                      date_stop="end_date"
                      color="partner_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="code"/>
                <field name="client_id"/>
                <field name="installation_id"/>
                <field name="partner_id"/>
                <field name="service_type"/>
                <field name="assigned_hours"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Installation Service Timeline Action -->
    <record id="action_wfm_installation_service_timeline" model="ir.actions.act_window">
        <field name="name">Services Timeline</field>
        <field name="res_model">wfm.installation.service</field>
        <field name="view_mode">calendar,list,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No installation services found
            </p>
            <p>
                View partner assignments to installations over time.
            </p>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- CONTRACT TIMELINE CALENDAR VIEW             -->
    <!-- ============================================ -->

    <record id="view_wfm_contract_timeline_calendar" model="ir.ui.view">
        <field name="name">wfm.contract.timeline.calendar</field>
        <field name="model">wfm.contract</field>
        <field name="arch" type="xml">
            <calendar string="Contracts Timeline"
                      date_start="start_date"
                      date_stop="end_date"
                      color="client_id"
                      mode="month"
                      event_open_popup="true"
                      quick_create="false">
                <field name="code"/>
                <field name="name"/>
                <field name="client_id"/>
                <field name="contract_value"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Contract Timeline Action -->
    <record id="action_wfm_contract_timeline" model="ir.actions.act_window">
        <field name="name">Contracts Timeline</field>
        <field name="res_model">wfm.contract</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No contracts found
            </p>
            <p>
                View all contracts on a calendar by client.
            </p>
        </field>
    </record>
</odoo>
