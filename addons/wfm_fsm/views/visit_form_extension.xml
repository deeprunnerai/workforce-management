<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Visit Form View to add Smart Assignment features -->
    <record id="wfm_visit_form_fsm" model="ir.ui.view">
        <field name="name">wfm.visit.form.fsm</field>
        <field name="model">wfm.visit</field>
        <field name="inherit_id" ref="wfm_core.view_wfm_visit_form"/>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <!-- Add Smart Assign button in header - only when NO partner assigned -->
            <xpath expr="//header/button[@name='action_assign']" position="after">
                <button name="action_open_smart_assign"
                        string="Smart Assign"
                        type="object"
                        class="btn-primary"
                        invisible="partner_id or state not in ('draft',)"
                        icon="fa-magic"/>
            </xpath>

            <!-- Add Coordinator field after partner -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="coordinator_id"/>
            </xpath>

            <!-- Add Recommendations section before notes - only when NO partner assigned -->
            <xpath expr="//field[@name='notes']" position="before">
                <separator string="Partner Recommendations" invisible="partner_id"/>
                <!-- AI Recommendation display (shown after clicking Ask AI) -->
                <field name="ai_recommendation_html" nolabel="1" readonly="1"
                       invisible="partner_id or not ai_recommendation_html"/>
                <!-- Ask AI button - shiny and prominent -->
                <div invisible="partner_id" class="mb-3">
                    <button name="action_get_ai_recommendation"
                            string="ðŸ¤– Ask AI for Recommendation"
                            type="object"
                            class="btn-primary o_wow_btn"/>
                    <span class="ms-2 text-muted small">Get Claude AI analysis of candidates</span>
                </div>
                <field name="recommendation_html" nolabel="1" readonly="1"
                       invisible="partner_id"/>
                <field name="recommended_partner_ids" invisible="1"/>
                <field name="ai_recommendation" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
