<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="wfm_fsm.Dashboard">
        <div class="o_wfm_dashboard o_action">
            <div class="container-fluid py-4">
                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12 d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fa fa-dashboard me-2"/>
                            Coordinator Dashboard
                        </h2>
                        <button class="btn btn-outline-secondary" t-on-click="refreshData">
                            <i class="fa fa-refresh" t-att-class="{ 'fa-spin': state.loading }"/>
                            Refresh
                        </button>
                    </div>
                </div>

                <!-- Loading indicator -->
                <t t-if="state.loading">
                    <div class="text-center py-5">
                        <i class="fa fa-spinner fa-spin fa-3x text-muted"/>
                        <p class="text-muted mt-2">Loading dashboard...</p>
                    </div>
                </t>

                <t t-else="">
                    <!-- Main Status Cards - 4 Colors -->
                    <div class="row mb-4">
                        <!-- Green Card - Completed -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card h-100 wfm-dashboard-card wfm-card-green"
                                 t-on-click="openGreen">
                                <div class="card-body text-center">
                                    <i class="fa fa-check-circle wfm-card-icon"/>
                                    <div class="wfm-card-count" t-esc="state.green"/>
                                    <div class="wfm-card-label">Completed</div>
                                    <small class="text-muted d-block mt-1">Work done, happy flow</small>
                                </div>
                            </div>
                        </div>

                        <!-- Yellow Card - Assigned -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card h-100 wfm-dashboard-card wfm-card-yellow"
                                 t-on-click="openYellow">
                                <div class="card-body text-center">
                                    <i class="fa fa-user-plus wfm-card-icon"/>
                                    <div class="wfm-card-count" t-esc="state.yellow"/>
                                    <div class="wfm-card-label">Assigned</div>
                                    <small class="text-muted d-block mt-1">Tasks assigned, upcoming</small>
                                </div>
                            </div>
                        </div>

                        <!-- Orange Card - In Progress -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card h-100 wfm-dashboard-card wfm-card-orange"
                                 t-on-click="openOrange">
                                <div class="card-body text-center">
                                    <i class="fa fa-spinner wfm-card-icon"/>
                                    <div class="wfm-card-count" t-esc="state.orange"/>
                                    <div class="wfm-card-label">In Progress</div>
                                    <small class="text-muted d-block mt-1">Partner has started</small>
                                </div>
                            </div>
                        </div>

                        <!-- Red Card - Action Required -->
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="card h-100 wfm-dashboard-card wfm-card-red"
                                 t-on-click="openRed">
                                <div class="card-body text-center">
                                    <i class="fa fa-exclamation-triangle wfm-card-icon"/>
                                    <div class="wfm-card-count" t-esc="state.red"/>
                                    <div class="wfm-card-label">Action Required</div>
                                    <small class="text-muted d-block mt-1">Delayed, needs attention</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Secondary Stats Row -->
                    <div class="row mb-4">
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="wfm-stat-card">
                                <div class="wfm-stat-value" t-esc="state.total"/>
                                <div class="wfm-stat-label">Total Visits</div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="wfm-stat-card" style="cursor: pointer;" t-on-click="openToday">
                                <div class="wfm-stat-value text-primary" t-esc="state.today"/>
                                <div class="wfm-stat-label">Today's Visits</div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="wfm-stat-card" style="cursor: pointer;" t-on-click="openUnassigned">
                                <div class="wfm-stat-value text-info" t-esc="state.unassigned"/>
                                <div class="wfm-stat-label">Unassigned</div>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <div class="wfm-stat-card">
                                <div class="wfm-stat-value" t-esc="state.this_week"/>
                                <div class="wfm-stat-label">This Week</div>
                            </div>
                        </div>
                    </div>

                    <!-- Quick Actions -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">
                                        <i class="fa fa-bolt me-2"/>
                                        Quick Actions
                                    </h5>
                                </div>
                                <div class="card-body wfm-quick-actions">
                                    <button class="btn btn-outline-danger" t-on-click="openRed">
                                        <i class="fa fa-exclamation-triangle"/>
                                        Review Action Required
                                    </button>
                                    <button class="btn btn-outline-info" t-on-click="openUnassigned">
                                        <i class="fa fa-user-plus"/>
                                        Assign Partners
                                    </button>
                                    <button class="btn btn-outline-primary" t-on-click="openToday">
                                        <i class="fa fa-calendar-check-o"/>
                                        Today's Schedule
                                    </button>
                                    <button class="btn btn-outline-secondary" t-on-click="openPipeline">
                                        <i class="fa fa-columns"/>
                                        Kanban Pipeline
                                    </button>
                                    <button class="btn btn-outline-secondary" t-on-click="openCalendar">
                                        <i class="fa fa-calendar"/>
                                        Calendar View
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
