<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend Visit Form to add WhatsApp button -->
    <record id="wfm_visit_form_whatsapp" model="ir.ui.view">
        <field name="name">wfm.visit.form.whatsapp</field>
        <field name="model">wfm.visit</field>
        <field name="inherit_id" ref="wfm_core.view_wfm_visit_form"/>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <!-- Add WhatsApp button in header after action_assign button -->
            <xpath expr="//header/button[@name='action_assign']" position="after">
                <button name="action_open_whatsapp_composer"
                        string="Send WhatsApp"
                        type="object"
                        class="btn-success"
                        icon="fa-whatsapp"
                        invisible="not partner_id"/>
            </xpath>
        </field>
    </record>
</odoo>
